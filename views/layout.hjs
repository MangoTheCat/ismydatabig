    <style>
      /*
        When setting the primary font stack, apply it to the Pure grid units along
        with `html`, `button`, `input`, `select`, and `textarea`. Pure Grids use
        specific font stacks to ensure the greatest OS/browser compatibility.
      */
      html, button, input, select, textarea,
      .pure-g [class *= "pure-u"] {
        /* Set your content font stack here: */
        font-family: 'Exo 2', sans-serif;
      }
    </style>

    <style>

      .button-submit,
      .button-white {
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        }

      .button-submit {
            color: white;
            background: rgb(66, 184, 221);
      }

      .huge-form {
            font-size: 300%;
            text-align: center;
      }

      .right-input {
            text-align: right;
      }

      #footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding-bottom: 10px;
            color: #555;
      }

      .result-size {
            margin-top: 100px;
            font-size: 300%;
            text-align: center;
      }

      .result {
            margin-top: 40px;
            font-size: 200%;
            text-align: center;
      }

      .result-result {
            color: red;
            font-weight: bold;
      }

      p.note {
            color: #555;
      }

    </style>

    <title>{{ title }}</title>

  </head>

  <body>
    <div id="wrap"><div id="main">
	<div class="content">{{$ content }}{{/ content }}</content>
    </div></div>

    <div id="footer">
